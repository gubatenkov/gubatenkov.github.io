---
import type { HTMLAttributes } from 'astro/types'
interface Props extends HTMLAttributes<'a'> {
  href: string
}
const { class: classes, ...attrs }: Props = Astro.props
---

<a
  class={'group relative cursor-pointer overflow-hidden rounded-full outline-2 outline-offset-2 outline-transparent transition-all duration-200 ease-in-out ' +
    classes}
  {...attrs}
>
  <slot>Link text</slot>
</a>
