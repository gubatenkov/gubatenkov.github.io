---
import type { TQualificationItem } from '@/data'

import CursorIcon from '@/components/icons/CursorIcon'
import { Picture } from 'astro-imagetools/components'
import LinkArrow from '@/components/icons/LinkArrow'

export type Props = TQualificationItem
const { description, followUrl, image, title, tag } = Astro.props
---

<div
  class="flex grid-cols-[5fr_7fr] flex-col-reverse items-center gap-4 overflow-hidden rounded-2xl bg-zinc-50 px-4 pb-10 pt-5 shadow-sm shadow-zinc-100/50 ring-1 ring-zinc-100 sm:gap-8 sm:px-8 sm:pb-14 sm:pt-8 lg:grid lg:gap-16 lg:p-0 lg:pt-0 xl:pt-16"
>
  <div class="lg:py-16 lg:pl-12 xl:pb-24 xl:pl-16 xl:pt-8">
    <p
      class="mb-5 inline-flex items-center gap-2 text-sm font-medium text-violet-900 sm:mb-6 sm:text-base"
    >
      <CursorIcon className="h-4 w-4 translate-y-[0.125rem] lg:translate-y-0" />
      <span>{tag}</span>
    </p>
    <h3 class="mb-4 text-2xl sm:text-3xl">{title}</h3>
    <p class="mb-12 line-clamp-3 leading-7 sm:mb-16 sm:leading-8">
      {description}
    </p>
    <a
      class="group inline-flex items-center gap-2 font-inter text-sm font-medium leading-6 text-violet-700 transition-all duration-200 ease-in-out hover:text-violet-600 sm:text-base"
      rel="noopener noreferrer"
      href={followUrl}
      target="_blank"
    >
      <span class="inline-block">View Case Study</span>
      <LinkArrow
        className="h-5 w-5 transition-all duration-200 ease-in-out group-hover:-translate-y-0.5 group-hover:translate-x-0.5"
      />
    </a>
  </div>
  <a
    class="group block aspect-[7/4.5] h-full w-full overflow-hidden rounded-2xl ring-1 ring-zinc-100/75 max-[1280px]:!mt-0 lg:rounded-none lg:rounded-tl-none xl:rounded-tl-2xl"
    rel="noopener noreferrer"
    href={followUrl}
    target="_blank"
  >
    <div class="transition-transform duration-200 group-hover:scale-105">
      <Picture
        layout="fullWidth"
        src={image.path}
        alt={image.alt}
        quality={80}
      />
    </div>
  </a>
</div>
