---
import MobileMenu from '@/components/islands/MobileMenu'
import { menu } from '@/data'

import NavText from './NavText.astro'
import NavLink from './NavLink.astro'

interface Props {
  class?: string
}
const { class: classes } = Astro.props
---

<header class={'border-b border-zinc-200/80 bg-white py-7 ' + classes}>
  <div
    class="mx-auto flex min-h-[2.5rem] w-full max-w-7xl items-center justify-between px-4 sm:px-6 md:px-8"
  >
    <nav class="mx-auto">
      <ul class="hidden gap-2 md:flex">
        {
          menu.map(({ isActive, text, ...props }) =>
            isActive ? (
              <NavLink {...props}>{text}</NavLink>
            ) : (
              <NavText {...props}>{text}</NavText>
            )
          )
        }
      </ul>
    </nav>
    <MobileMenu items={menu} client:idle />
  </div>
</header>
